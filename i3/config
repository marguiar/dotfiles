# Please see https://i3wm.org/docs/userguide.html for a complete reference!

## VARIABLES
set $mod Mod4
# bindsym shortener
set $sup bindsym Mod4
# exec shortener
set $exe exec --no-startup-id
set $exe_always exec_always --no-startup-id
# user local bin path
set $bin ~/bin
#monitor outputs
# set $mon_1 output DP-1
# set $mon_2 output DVI-I-2-1
set $mon_1 output HDMI-1
set $mon_2 output DP-1
# float enable
set $is_float floating enable
# default terminal
set $term xfce4-terminal

## WORKSPACES
# labels
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws10 "10"
# outputs
workspace $ws1  $mon_1
workspace $ws2  $mon_1
workspace $ws3  $mon_1
workspace $ws4  $mon_1
workspace $ws10 $mon_2

workspace_auto_back_and_forth yes

$sup+1 workspace $ws1
$sup+Home workspace $ws1

$sup+2 workspace $ws2
$sup+3 workspace $ws3
$sup+4 workspace $ws4
$sup+0 workspace $ws10

$sup+Control+Right workspace next
$sup+Control+Left workspace prev

# moving to
$sup+Shift+1 move container to workspace $ws1;  workspace $ws1
$sup+Shift+2 move container to workspace $ws2;  workspace $ws2
$sup+Shift+3 move container to workspace $ws3;  workspace $ws3
$sup+Shift+4 move container to workspace $ws4;  workspace $ws4
$sup+Shift+0 move container to workspace $ws10; workspace $ws10

font pango:Open Sans 8

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks

# Media player controls

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Toggle on/off notebook display
$sup+Shift+o exec ~/dotfiles/handle-lid.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod1

## LAUNCHERS
# Terminal
$sup+Return exec $term
# Browser
$sup+b exec chrome
# Calculator
$sup+c exec gnome-calculator
# Nemo
$sup+e exec nemo
#Spotify
$sup+m exec spotify
# Rofi Menu
bindsym Mod1+space exec ulauncher-toggle

## SHORTCUTS 'xev' to get key press
$sup+s exec cinnamon-settings
# Screenshot
bindsym --release Print exec gnome-screenshot
bindsym --release Mod1+Print exec gnome-screenshot -w
bindsym --release Shift+Print exec gnome-screenshot -a
# Diodon
$sup+v exec ~/.config/clipboard-manager.sh

$sup+F10 exec cinnamon-settings sound

## ACTIONS
# kill focused window
$sup+q kill
# start dmenu (a program launcher)
$sup+d exec dmenu_run
# change focus
$sup+Left focus left
$sup+Down focus down
$sup+Up focus up
$sup+Right focus right

$sup+Mod1+Left focus output left
$sup+Mod1+Right focus output right

# move focused window
$sup+Shift+Left move left
$sup+Shift+Down move down
$sup+Shift+Up move up
$sup+Shift+Right move right
# change stack position
$sup+slash split toggle
# enter fullscreen mode for the focused container
$sup+f fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
$sup+o layout toggle split v split h
$sup+Shift+question layout toggle tabbed split
# toggle tiling / floating
$sup+Shift+space floating toggle
# change focus between tiling / floating windows
$sup+space focus mode_toggle
# focus the parent container
$sup+a focus parent
# focus the child container
#$sup+d focus child

## I3 COMMANDS
# reload the configuration file
$sup+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$sup+Shift+r restart
# exit i3 (logs you out of your X session)
$sup+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# resize window (you can also use the mouse for that)
mode "resize" {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        $sup+r mode "default"
}
$sup+r mode "resize"

## START-UP
$exe ~/dotfiles/vpn-connect.sh # VPN
$exe_always ~/.screenlayout/3home.sh
# $exe_always ./get-hwmon-path.sh # Get the correct temperature sensor
$exe_always ~/.config/polybar/launch.sh --forest -r
#$exe_always ~/.config/i3/scripts/autolayout.py
$exe nitrogen --restore
$exe sleep 5 && picom -CGb
$exe redshift
$exe xset -dpms s off # Disable screen saver
$exe /usr/bin/diodon --start-in-tray # Clipboard manager
$exe ulauncher --hide-window --no-window-shadow

## Custom layouts at startup
$exe i3-msg "workspace $ws1; append_layout ~/.config/i3-layouts/w-1.js on; exec slack"
$exe i3-msg "workspace $ws2; append_layout ~/.config/i3-layouts/w-2.json; exec code"
$exe i3-msg "workspace $ws10; append_layout ~/.config/i3-layouts/w-0.json; exec chrome; exec chrome; exec spotify"

## I3-GAPS
for_window [class=".*"] border pixel 2
gaps inner 6
hide_edge_borders smart

